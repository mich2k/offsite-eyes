<?xml version="1.0" encoding="utf-8"?>

<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Quiz_React"
    android:id="@+id/drawer_layout">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/games_quiz_dynamic_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#474747"
                android:textSize="20sp"
                app:layout_constraintBottom_toTopOf="@+id/quiz_back"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.49" />

            <ImageView
                android:id="@+id/image_view_backarrow_tutorials_game"
                android:layout_width="28dp"
                android:layout_height="28dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.093"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.046"
                app:srcCompat="@drawable/back_arrow" />

            <ImageView
                android:id="@+id/quiz_back"
                android:layout_width="353dp"
                android:layout_height="171dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.155"
                app:srcCompat="@drawable/games_quiz_background" />

            <TextView
                android:id="@+id/games_question_text_view"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center"
                android:paddingLeft="10px"
                android:paddingRight="10px"
                android:textColor="#000000"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@+id/quiz_back"
                app:layout_constraintEnd_toEndOf="@+id/quiz_back"
                app:layout_constraintHorizontal_bias="0.558"
                app:layout_constraintStart_toStartOf="@+id/quiz_back"
                app:layout_constraintTop_toTopOf="@+id/quiz_back"
                app:layout_constraintVertical_bias="0.496" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/finish_activity"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="320dp"
                android:layout_height="70dp"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="8dp"
                android:textAllCaps="false"
                app:cornerRadius="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.493"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.722"
                app:strokeColor="#000000" />

            <!--<com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                app:cornerRadius="24dp"
                app:strokeColor="#59CECE"
                tools:layout_editor_absoluteX="36dp"
                tools:layout_editor_absoluteY="320dp"></com.google.android.material.button.MaterialButton>
-->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/option_1"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="318dp"
                android:layout_height="70dp"
                android:layout_marginBottom="8dp"
                android:textAllCaps="false"
                app:cornerRadius="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.493"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.528"
                app:strokeColor="#000000" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/option_2"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="320dp"
                android:layout_height="70dp"
                android:layout_marginTop="8dp"
                android:textAllCaps="false"
                app:cornerRadius="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.493"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.626"
                app:strokeColor="#000000" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/option_4"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="320dp"
                android:layout_height="70dp"
                android:layout_marginTop="120dp"
                android:layout_marginBottom="8dp"
                android:textAllCaps="false"
                app:cornerRadius="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.493"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.82"
                app:strokeColor="#000000" />

            <TextView
                android:id="@+id/games_quiz_score_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/games_quiz_sub"
                android:textColor="#474747"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.427" />

            <TextView
                android:id="@+id/show_score"
                android:layout_width="103dp"
                android:layout_height="27dp"
                android:text="Domanda: "
                app:layout_constraintBottom_toTopOf="@+id/quiz_back"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.934"
                app:layout_constraintStart_toEndOf="@+id/image_view_backarrow_tutorials_game"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>


</androidx.drawerlayout.widget.DrawerLayout>


